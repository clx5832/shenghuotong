<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_weather"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        >

        <Button
            android:id="@+id/genggai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="19dp"
            android:layout_gravity="center"
            android:text="更改" />

        <EditText
            android:id="@+id/city1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="贺州"
            android:textSize="50dp"
            android:textStyle="italic|bold" />
        <Button
            android:id="@+id/qingchu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="19dp"
            android:layout_gravity="center"
            android:text="清除" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date1"
        android:text="日期"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:textStyle="italic|bold"
        android:layout_marginTop="20dp"
        android:textColor="#FF0000"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/week"
        android:text="星期几"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:textStyle="italic|bold"
        android:layout_marginTop="20dp"
        android:textColor="#FF0000"
        />
   <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/info"
    android:text="天气情况"
       android:textStyle="bold"
       android:textSize="20dp"
       android:layout_marginTop="20dp"
       android:layout_gravity="center_horizontal"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wid"
        android:text="天气标识id，可参考小接口2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        >
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/temperature"
        android:layout_weight="1"
        android:text="温度，可能为空"
        android:textSize="30dp"
        android:gravity="right"
        />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="°C"
            android:textSize="30dp"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="湿度:"
            />
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/humidity"
    android:text="湿度，可能为空"
        android:layout_marginLeft="10dp"
    />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/direct"
        android:layout_marginTop="20dp"
        android:text="风向，可能为空"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="风力："
            android:textSize="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/power"
            android:text="风力，可能为空"
            android:textSize="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:gravity="right"
            android:text="空气质量指数："
            android:textSize="20dp" />
     <TextView
        android:layout_width="0dp"
         android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/aqi"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:text="	空气质量指数，可能为空"
        />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/future"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:text="近5天天气情况"
        android:onClick="tianji"
        />
</LinearLayout>
</RelativeLayout>
